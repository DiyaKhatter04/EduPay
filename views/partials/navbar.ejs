<!-- Navigation Bar -->
<nav class="navbar">
    <div class="nav-container">
        <!-- Logo -->
        <div class="nav-logo">
            <a href="/" class="logo-link">
                <i class="fas fa-graduation-cap"></i>
                <span>EduConnect</span>
            </a>
        </div>
        
        <!-- Navigation Links -->
        <div class="nav-links">
            <% if (user.role === 'student') { %>
                <a href="/student/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="/student/requests" class="nav-link">
                    <i class="fas fa-clipboard-list"></i>
                    My Requests
                </a>
            <% } else if (user.role === 'donor') { %>
                <a href="/donor/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="/donor/requests" class="nav-link">
                    <i class="fas fa-search"></i>
                    Browse Requests
                </a>
            <% } else if (user.role === 'admin') { %>
                <a href="/admin/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="/admin/users" class="nav-link">
                    <i class="fas fa-users"></i>
                    Users
                </a>
                <a href="/admin/payments" class="nav-link">
                    <i class="fas fa-money-bill-wave"></i>
                    Payments
                </a>
                <a href="/admin/requests" class="nav-link">
                    <i class="fas fa-clipboard-list"></i>
                    Requests
                </a>
                <a href="/admin/donations" class="nav-link">
                    <i class="fas fa-gift"></i>
                    Donations
                </a>
            <% } %>
        </div>
        
        <!-- User Menu -->
        <div class="user-menu">
            <div class="user-info">
                <span class="user-name">
                    <%= user.username %>
                    <% if (user.uniqueId) { %>
                        <small>(ID: <%= user.uniqueId %>)</small>
                    <% } %>
                </span>
                <span class="user-role"><%= user.role.toUpperCase() %></span>
            </div>
            
            <div class="logout-container">
                <a href="/auth/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </div>
        </div>
        
        <!-- Mobile Menu Toggle -->
        <div class="mobile-menu-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</nav>